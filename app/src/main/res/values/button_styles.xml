<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="button" parent="ThemeOverlay.Material3.Button">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/montserrat_regular</item>
    <item name="android:shadowRadius">100</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:clipToPadding">false</item>
  </style>

  <style name="button.fill" parent="button">
    <item name="android:background">@drawable/button_color_wrapper</item>
    <item name="android:textColor">@color/on_primary_color</item>
  </style>

  <style name="button.outline" parent="button">
    <item name="android:background">@drawable/button_wrapper</item>
    <item name="android:textColor">@color/primary_color_dark</item>
  </style>
</resources>