<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.SpeechArt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primary_color</item>
    <item name="colorPrimaryVariant">@color/primary_color_dark</item>
    <item name="colorOnPrimary">@color/on_primary_color</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/secondary_color</item>
    <item name="colorSecondaryVariant">@color/secondary_color_dark</item>
    <item name="colorOnSecondary">@color/on_secondary_color</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/primary_color</item>
    <!-- Customize your theme here. -->

    <item name="android:windowIsFloating">false</item>
    <item name="android:windowBackground">@color/bg</item>

    <item name="android:textViewStyle">@style/text</item>
    <item name="android:autofilledHighlight">@android:color/transparent</item>
  </style>

  <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
    <item name="colorPrimaryDark">@color/primary_color_dark</item>
    <item name="colorAccent">@color/on_secondary_color</item>
    <item name="colorPrimary">@color/primary_color</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="android:statusBarColor">@color/primary_color</item>
    <item name="actionMenuTextColor">@color/on_primary_color</item>
  </style>

  <style name="Slide">
    <item name="android:windowEnterAnimation">@anim/slide_up</item>
    <item name="android:windowExitAnimation">@anim/slide_down</item>
    <item name="android:statusBarColor">@color/primary_color</item>
  </style>

  <style name="MyRatingBar">
    <item name="android:minHeight">15dp</item>
    <item name="android:maxHeight">15dp</item>
    <item name="colorControlNormal">@color/primary_color</item>
    <item name="colorControlActivated">@color/primary_color</item>
  </style>
</resources>