  <style name="text.contrast" parent="text">
    <item name="android:textColor">@color/on_secondary_color</item>
    <item name="android:fontFamily">@font/nothing_you_could_do_regular</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="text.hint.small" parent="text.hint">
    <item name="android:textSize">12sp</item>
  </style>

  <style name="text.hint" parent="text">
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="text.header1" parent="text">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="text.header1.bold" parent="text.header1">
    <item name="android:fontFamily">@font/montserrat_medium</item>
  </style>

  <style name="text.big" parent="text">
    <item name="android:textSize">34sp</item>
  </style>

  <style name="text.header2" parent="text">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="text.header2.bold" parent="text.bold">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="text.header3" parent="text">
    <item name="android:textSize">15sp</item>
  </style>

  <style name="text.header3.bold" parent="text.bold">
    <item name="android:textSize">15sp</item>
  </style>

  <style name="text.error" parent="text">
    <item name="android:textColor">@color/secondary_color_dark</item>
  </style>
</resources>